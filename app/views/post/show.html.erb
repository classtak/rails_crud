<h2>게시글</h2>
<p><%= @post.id %></p>
<p><%= @post.username %></p>
<p><%= @post.title %></p>
<p><%= @post.content %></p>
<p><%= @post.created_at %></p>

<hr />
<h4> 댓글 입력해줘</h4>
<form action="/post/add_comment">
  <input type="text" name="content" placeholder="댓글을 입력해주세요."/>
  <input type="hidden" name="id" value="<%= @post.id %>">
  <input type="submit" />
</form>

<hr />
<% @post.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>
